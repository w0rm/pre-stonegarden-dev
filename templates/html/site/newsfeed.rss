$def with (news)
<?xml version="1.0" encoding="utf-8" ?>
<rss version="2.0" xmlns:atom="http://www.w3.org/2005/Atom">
  <channel>
    <title>$_("News")</title>
    <link>$ctx.home</link>
    <atom:link href="$ctx.home/newsfeed.rss" rel="self"
          type="application/rss+xml" />
    <description></description>
    $if news:
        <pubDate>$datify(news[0].published_at, u"%a, %d %b %Y %H:%M:%S UT", True)</pubDate>
    $if news:
        $for update in news:
            <item>
                <title>$update.title</title>
                <link>$ctx.home$update.path</link>
                <guid>$ctx.home$update.path</guid>
                <pubDate>$datify(update.published_at, u"%a, %d %b %Y %H:%M:%S UT", True)</pubDate>
                <description><![CDATA[
                    $render_news_content(update)
                ]]></description>
            </item>
  </channel>
</rss>
